extends layout

block content
   script(type='text/javascript').
       $(start);
       function start() {
           Client.Lobby.setup($('#room-list'));
       };
   h1 ultra quiz
   h2 New game
   form(action='newroom' method='post')
       table
           tbody
               tr
                   td Quiz
                   td
                       select(name="quizID")
                           each q in allQuizes
                               option(value=q._id) #{q.title}
               tr
                   td Max Player
                   td
                       input(type='number', name='nbPlayers')
               tr
                   td
                       input(type='submit')
   h2 Games
   p List of available rooms:
   div(id='room-list')
