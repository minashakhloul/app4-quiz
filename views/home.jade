extends layout

body
   block content
      .container

         .row
            .col-xs-12.col-sm-offset-2.col-sm-8.col-md-offset-3.col-md-6.col-lg-offset-4.col-lg-4
               form.form-signin(role='form')
                  h2.form-signin-heading Please sign in
                  .form-group
                     input.form-control(type='email', placeholder='Pseudonyme', required='', autofocus='')
                  .form-group
                     input.form-control(type='password', placeholder='Password', required='')
                  .form-group
                     button.btn.col-xs-offset-3.col-xs-4.btn-primary(type='submit') Sign in
                     button.btn.col-xs-offset-1.col-xs-4.btn-warning Create account

